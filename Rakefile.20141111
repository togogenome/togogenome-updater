    name = set_name
    load_ttl("#{RDF_DIR}/togogenome/refseq/current/prokaryotes.up.ttl", 'tgup', name)
    update_graph('tgup', name)
  end

  #desc "Load TogoGenome taxonomy to parent taxonomy mappings"
  task :load_tgtax do
    name = set_name
